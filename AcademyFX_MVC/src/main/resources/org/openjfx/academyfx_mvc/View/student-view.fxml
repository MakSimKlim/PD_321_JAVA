<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.openjfx.academyfx_mvc.Controller.StudentViewController">

    <TableView fx:id="tableStudents" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">
        <columns>
            <!-- Общие колонки из Human -->
            <fx:include source="human-columns.fxml" />

            <!-- Уникальная колонка Student -->
            <TableColumn fx:id="colGroup" text="Группа" prefWidth="101.0" />
        </columns>
    </TableView>

</AnchorPane>
